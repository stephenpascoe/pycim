                </property>
                <property>
                    <value>56.9</value>
                    <name>SecondPoleLat</name>
                </property>
                <property>
                    <value>387</value>
                    <name>NumberOfCellsInFirstGridDimension</name>
                </property>
                <property>
                    <value>360</value>
                    <name>NumberOfCellsInSecondGridDimension</name>
                </property>
                <property>
                    <value>70</value>
                    <name>SecondPoleLon</name>
                </property>
                <property>
                    <value>-110</value>
                    <name>FirstPoleLon</name>
                </property>
            </horizontalResolution>
        <!--Vertical Domain specified as : oceanic-->
            <verticalResolution>
                <property>
                    <value>varies (maximum of 9)</value>
                    <name>NumberOfLevelsInUpper100m</name>
                </property>
                <property>
                    <value>0 m</value>
                    <name>UpperLevel</name>
